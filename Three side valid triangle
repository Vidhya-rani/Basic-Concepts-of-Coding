import java.util.Scanner;
public class Three_Side_Valid_Triangle {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the lengths of three sides of triangle:");
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=sc.nextInt();
        //from triangle inequality theorem
        if(a+b>c && b+c>a && c+a>b){
            System.out.println("The sides form a valid triangle");
        }
        else{
            System.out.println("The sides do not form a valid triangle");

        }
    }
}
